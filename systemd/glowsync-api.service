[Unit]
Description=GlowSync API (FastAPI)
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
WorkingDirectory=%h/glowsync
Environment="PYTHONUNBUFFERED=1"
ExecStart=%h/glowsync/.venv/bin/uvicorn app.main:app --host 0.0.0.0 --port 8000
Restart=on-failure
User=%i

[Install]
WantedBy=multi-user.target
